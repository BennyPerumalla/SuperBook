{
  "manifest_version": 3,
  "name": "SuperBook",
  "version": "1.0.0",
  "description": "SuperBook - Your ultimate reading companion with instant word definitions and enhanced reading experience",
  "permissions": [
    "activeTab",
    "storage"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["tooltip.css"],
      "run_at": "document_end"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "https://api.dictionaryapi.dev/*"
  ]
}